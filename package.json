{
	"name": "cloudnow",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "pnpm --filter @portal/frontend dev",
		"dev:api": "pnpm --filter @portal/api dev",
		"build": "pnpm --filter @portal/frontend build",
		"build:api": "pnpm --filter @portal/api build",
		"test": "pnpm --recursive run test",
		"lint": "pnpm --recursive run lint",
		"lint:oxlint": "pnpm --recursive run lint:oxlint",
		"lint:eslint": "pnpm --recursive run lint:eslint",
		"lint:sql": "sqlfluff lint packages/server/src/oracle/migrations --dialect oracle || echo '⚠️  SQLFluff not installed. Run: pip install sqlfluff'",
		"lint:sql:fix": "sqlfluff fix packages/server/src/oracle/migrations --dialect oracle || echo '⚠️  SQLFluff not installed. Run: pip install sqlfluff'",
		"lint:fix": "pnpm --recursive run lint:fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"check": "pnpm --filter @portal/frontend check",
		"knip": "knip",
		"prepare": "git config core.hooksPath .githooks"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.18.2",
		"@eslint/js": "^9.39.2",
		"@stoplight/spectral-cli": "^6.15.0",
		"@stoplight/spectral-owasp-ruleset": "^2.0.1",
		"eslint": "^9.39.2",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.3.0",
		"knip": "^5.83.1",
		"madge": "^8.0.0",
		"oxlint": "^1.47.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"publint": "^0.3.17",
		"syncpack": "^13.0.4",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0"
	}
}

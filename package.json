{
	"name": "oci-self-service-portal",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "pnpm --filter @portal/frontend dev",
		"dev:api": "pnpm --filter @portal/api dev",
		"build": "pnpm --filter @portal/frontend build",
		"build:api": "pnpm --filter @portal/api build",
		"test": "pnpm --recursive run test",
		"lint": "pnpm --recursive run lint",
		"lint:fix": "pnpm --recursive run lint:fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"check": "pnpm --filter @portal/frontend check",
		"prepare": "git config core.hooksPath .githooks"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"eslint": "^9.39.2",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.3.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0"
	}
}
